

<div class="form-container">
  <%= render "shared/flash"  %>

  <%= form_with(method: 'get', local: true) do %>
    <%= label :address, "Enter address for current weather forecast" %><br>
    <%= text_field_tag(:address, @address, size: 70, placeholder: '1600 Pennsylvania Avenue NW, Washington, DC') %><br>
    <%= submit_tag("Lookup", class: 'submit') %>
  <% end %>
</div>

<% if @forecast.present? %>
  <div class="page-content page-container" id="page-content">
    <div class="padding">
      <div class="row container d-flex justify-content-center">
        <div class="col-lg-8 grid-margin stretch-card">
          <div class="card card-weather">
            <div class="card-body">
              <div class="weather-data d-flex">
                <div class="mr-auto">
                  <h4 class="display-3">Current Temperature: <%= @forecast.current_temp %>
                    <span class="symbol">&deg;</span>F</h4>
                  <h4 class="display-3">Low Temperature: <%= @forecast.low_temp %>
                    <span class="symbol">&deg;</span>F</h4>
                  <h4 class="display-3">High Temperature: <%= @forecast.high_temp %>
                    <span class="symbol">&deg;</span>F</h4>
                  <h5>
                    Forecast cached? <%= @forecast_cache_exist %>
                  </h5>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

